#include <bits/stdc++.h>
using namespace std;

int main() {

    map<wstring,wstring> alter;

    wfstream alternatives("alternatives.txt", wifstream::in);
    alternatives.imbue(locale(alternatives.getloc(), new std::codecvt_utf8<wchar_t>));


    wstring line,key,value;
    while (getline(alternatives, line)) {
        size_t com = line.find(L',');
        size_t pos = line.find(L'.');
        if (pos != alternatives.tellg()) {
            key = line.substr(0, com);
            value = line.substr(com + 1,((line.length())/2));
            alter[key] = value;
        }
    }


    alternatives.close();

    wifstream post("post.txt", wifstream::in );
    post.imbue(locale(post.getloc(), new std::codecvt_utf8<wchar_t>));

    wofstream outputFile("outputFile.txt", std::wofstream::out);
    outputFile.imbue(locale(outputFile.getloc(), new std::codecvt_utf8<wchar_t>));

    wstring word;
    while (post>>word) {
        if (alter.find(word) != alter.end()) {
            outputFile << alter[word] << L' ';
        } else {
            outputFile << word << L' ';
        }
        }


    post.close();
    outputFile.close();

    return 0;
}
